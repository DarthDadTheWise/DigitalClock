<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalClockWpf.View"
             xmlns:ViewModel="clr-namespace:DigitalClockWpf.ViewModel" x:Class="DigitalClockWpf.View.DigitControl"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type={x:Type ViewModel:DigitViewModel}}">
    <StackPanel>
        <TextBlock Text="{Binding Value, Mode=OneWay}" />
    </StackPanel>
</UserControl>
